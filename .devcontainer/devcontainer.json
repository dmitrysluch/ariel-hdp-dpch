// Could you please generate vscode devcontainers json and devcontainers docker-compose based on existing docker-compose

{
  "name": "DPCH DevContainer",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
  "remoteUser": "root"
}
